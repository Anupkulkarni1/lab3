<!DOCTYPE html>
<html>
  <head>
    <title>File upload Node.</title>
  </head>
  <body>
    <div style="margin-left:1452px" class="col-xs-offset-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
     <a href="/signin">Signout</a>
    </div>
      <form style="margin-left:550px;margin-top:260px"
          id="uploadForm"
          enctype="multipart/form-data"
          action="/api/photo"
          method="post">
      <input type="file" name="userPhoto" />
      <input type="submit" value="Upload a file" name="submit">
      <span id = "status"></span>
    </form>
  </body>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
  <script>
  $(document).ready(function() {

     $('#uploadForm').submit(function() {
     $("#status").empty().text("File is uploading...");

        $(this).ajaxSubmit({

            error: function(xhr) {
                status('Error: ' + xhr.status);
            },

            success: function(response) {
          console.log(response)
          $("#status").empty().text(response);
            }
  });

  return false;
    });    
});
  </script>
  
</html>
